<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/addGameParent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AddGameActivity" >

    <ImageView
        android:id="@+id/addgamebackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        android:src="@drawable/baseballbackground" />
    
     <TextView
         android:id="@+id/addGameHeader"
         android:layout_width="fill_parent"
         android:layout_height="45dp"
         android:layout_alignParentBottom="false"
         android:layout_alignParentTop="true"
         android:layout_alignWithParentIfMissing="false"
         android:layout_centerHorizontal="false"
         android:layout_centerInParent="false"
         android:layout_centerVertical="false"
         android:background="@drawable/customborder"
         android:gravity="center"
         android:text="add new game"
         android:textSize="24sp" />
    
     <TextView
         android:id="@+id/gameNameLabel"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/addGameHeader"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="25dp"
         android:text="Game description"
         android:textSize="20sp" />
     
    <EditText
        android:id="@+id/gameNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameNameLabel"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="sweet game"
        android:imeOptions="actionDone"
        android:inputType="text|textCapWords|textImeMultiLine" />

        <requestFocus />
      
        <TextView
            android:id="@+id/datePlayedLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameNameInput"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:text="Date played"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/gameDateInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/gameInfoHeader"
            android:layout_below="@+id/datePlayedLabel"
            android:layout_centerVertical="false"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:editable="false"
            android:ems="10"
            android:hint="dd/mm/yyyy" />
        
     <Button
            android:id="@+id/chooseplayers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="choosePlayers"
            android:text="@string/choose_players" />

     <ImageButton
         android:id="@+id/btnChangeDate"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/gameDateInput"
         android:layout_alignRight="@+id/datePlayedLabel"
         android:layout_marginRight="40dp"
         android:contentDescription="selectdate"
         android:cropToPadding="true"
         android:src="@android:drawable/ic_menu_my_calendar" />
     
     <TextView
         android:id="@+id/gameOpponentLabel"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/gameDateInput"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="20dp"
         android:text="Opponent"
         android:textSize="20sp" />
    
    <EditText
        android:id="@+id/opponentInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameOpponentLabel"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:hint="the shittys"
        android:imeOptions="actionDone"
        android:inputType="text|textCapWords|textImeMultiLine" />
        <requestFocus />
        </RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditStatsActivity" >
    
         <TextView
     android:id="@+id/addStatHeader"
     android:layout_width="fill_parent"
     android:layout_height="45sp"
     android:layout_alignParentBottom="false"
     android:layout_alignParentTop="true"
     android:background="@drawable/customborder"
     android:layout_alignWithParentIfMissing="false"
     android:layout_centerHorizontal="false"
     android:layout_centerInParent="false"
     android:layout_centerVertical="false"
     android:gravity="center"
     android:text="add stats"
     android:textSize="24sp" />
	
    <TextView
        android:id="@+id/addStatMemo"
        android:layout_below="@+id/addStatHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Select each player to add stats for" />

	<ListView
	    android:id="@android:id/list"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:background="@drawable/list_selector"
	    android:layout_below="@+id/addStatMemo"
	    android:text="@string/addPlayer" />
	
</RelativeLayout>

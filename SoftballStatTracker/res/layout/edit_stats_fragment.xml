<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp" >

    <LinearLayout
        android:id="@+id/atBats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/atBatsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="At Bats" />
        
         <EditText
            android:id="@+id/atBatsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

       	<!--  <NumberPicker 
       	    android:id="@+id/atBatsInput"
       	    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number">
       	    
       	</NumberPicker>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/singles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/atBats" >

        <TextView
            android:id="@+id/singlesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Singles" />

        <EditText
            android:id="@+id/singlesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/doubles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/singles" >

        <TextView
            android:id="@+id/doublesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Doubles" />

        <EditText
            android:id="@+id/doublesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/triples"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/doubles" >

        <TextView
            android:id="@+id/triplesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Triples" />

        <EditText
            android:id="@+id/triplesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeRuns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/triples" >

        <TextView
            android:id="@+id/homeRunsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Homeruns" />

        <EditText
            android:id="@+id/homeRunsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>
    
      <LinearLayout
        android:id="@+id/rbis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/homeRuns" >

        <TextView
            android:id="@+id/rbisLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="RBIs" />

        <EditText
            android:id="@+id/rbisInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/putOuts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rbis" >

        <TextView
            android:id="@+id/putOutsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Put Outs" />

        <EditText
            android:id="@+id/putOutsInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>
    
      <LinearLayout
        android:id="@+id/beersDrank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/putOuts" >

        <TextView
            android:id="@+id/beersDrankLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Beers Drank" />

        <EditText
            android:id="@+id/beersDrankInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>

      <Button
          android:id="@+id/saveStats"
          android:onClick="onSaveStats"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/beersDrank"
          android:layout_centerHorizontal="true"
          android:text="Save" />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AddPlayerActivity" >

       <ImageView
           android:id="@+id/addplayerbackground"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:layout_centerInParent="false"
           android:adjustViewBounds="true"
           android:paddingLeft="50dp"
           android:paddingRight="50dp"
           android:paddingTop="50dp"
           android:scaleType="fitEnd"
           android:src="@drawable/burkad" >

 </ImageView>
      
      
     <TextView
     android:id="@+id/playerInfoHeader"
     android:layout_width="fill_parent"
     android:layout_height="45sp"
     android:layout_alignParentBottom="false"
     android:layout_alignParentTop="true"
     android:background="@drawable/customborder"
     android:layout_alignWithParentIfMissing="false"
     android:layout_centerHorizontal="false"
     android:layout_centerInParent="false"
     android:layout_centerVertical="false"
     android:gravity="center"
     android:text="add new player"
     android:textSize="24sp" />
     
     <TextView
         android:id="@+id/playerNumberLabel"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/playerInfoHeader"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="50dp"
         android:text="Player Number"
         android:textSize="20sp" />
     
     <EditText
         android:id="@+id/playerNumberInput"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/playerNumberLabel"
         android:layout_marginLeft="15dp"
         android:layout_marginTop="10dp"
         android:ems="10"
         android:hint="44"
         android:imeOptions="actionDone"
         android:inputType="text|textCapWords|textImeMultiLine|number" >

         <requestFocus />
     </EditText>
     
     <TextView
         android:id="@+id/playerNameLabel"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/playerNumberInput"
         android:layout_marginLeft="20dp"
         android:layout_marginTop="30dp"
         android:text="Player Name"
         android:textSize="20sp" />
     
     <EditText
         android:id="@+id/playerNameInput"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/playerNameLabel"
         android:layout_marginLeft="15dp"
         android:layout_marginTop="10dp"
         android:ems="10"
         android:hint="Kenny Powers"
         android:imeOptions="actionDone"
         android:inputType="text|textCapWords|textImeMultiLine" >

         <requestFocus />
     </EditText>

     <!-- <ImageButton
         android:id="@+id/playerImageButton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignTop="@+id/playerNameInput"
         android:layout_toRightOf="@+id/playerNameInput"
         android:onClick="onSelectImage"
         android:src="@android:drawable/ic_menu_gallery" />-->
     
     <ImageView
         android:id="@+id/playerImage"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_above="@+id/savePlayerButton"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/savePlayerButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addplayerbackground"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="55dp"
        android:onClick="savePlayer"
        android:text=" Save Player" />

</RelativeLayout>

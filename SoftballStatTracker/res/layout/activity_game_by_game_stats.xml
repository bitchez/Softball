<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >
    
<TextView
     android:id="@+id/gameByGameHeader"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="false"
     android:layout_alignParentTop="true"
     android:layout_alignWithParentIfMissing="false"
     android:layout_centerHorizontal="false"
     android:layout_centerInParent="false"
     android:layout_centerVertical="false"
     android:background="#000000"
     android:gravity="center"
     android:text="game by game stats"
     android:textSize="24sp" />
    
   <RelativeLayout
    android:id="@+id/gameStatsHeader"
    android:layout_width="fill_parent"
    android:layout_height="45dp"
    android:layout_below="@+id/gameByGameHeader"
    android:background="@drawable/customborder"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dip" >
    
    <TextView
        android:id="@+id/gameNameStatsHeader"
        android:text="Games"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_width="70dp" 
        android:textSize="14sp" />

	<TextView
	    android:id="@+id/gameDateStatsHeader"
	    android:textColor="@android:color/white"
	    android:text="Date"
	    android:layout_width="80dp" 
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/gameNameStatsHeader"
        android:textSize="14sp"  />

	<TextView
	    android:id="@+id/gameABsStatsHeader"
	    android:layout_width="40dp"
        android:layout_height="wrap_content"
         android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/gameDateStatsHeader"
        android:textSize="14sp"
        android:typeface="sans" 
	    android:text="ABs"/>
	
	<TextView
	    android:id="@+id/gameHitsStatsHeader"
	   android:layout_width="50dp"
        android:layout_height="wrap_content"
         android:textColor="@android:color/white"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/gameABsStatsHeader"
        android:textSize="14sp"
        android:typeface="sans" 
	    android:text="Hits"/>

	<TextView
	    android:id="@+id/gameAvgStatsHeader"
	    android:textColor="@android:color/white"
	    android:text="AVG"
	    android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/gameHitsStatsHeader"
        android:textSize="14sp"
        android:typeface="sans"  />

	<TextView
	     android:id="@+id/gameRBIsStatsHeader"
	    android:textColor="@android:color/white"
	    android:text="RBIs"
	    android:layout_width="30dp" 
        android:layout_height="wrap_content"
       android:layout_toRightOf="@+id/gameAvgStatsHeader"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:typeface="sans" />
</RelativeLayout>

    <ImageView
        android:id="@+id/gameBygameBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="false"
        android:adjustViewBounds="false"
        android:scaleType="fitEnd"
        android:src="@drawable/leaderboardbackground" >
     
 </ImageView>
 
     <ExpandableListView
         android:id="@android:id/list"
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:layout_below="@+id/gameStatsHeader"/>   
 
</RelativeLayout>
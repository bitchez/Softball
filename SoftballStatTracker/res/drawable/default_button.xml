<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#ef4444" />
      <stroke
          android:width="1dp"
          android:color="#992f2f" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape android:shape="rectangle">
      <corners
			android:radius="14dp"/>
<gradient
		android:angle="270"
android:centerX="35%"
android:centerColor="#8692A8"
android:startColor="#E8E8E8"
android:endColor="#000000"
android:type="linear"/>
<padding
		android:left="0dp"
		android:top="0dp"
		android:right="0dp"
		android:bottom="0dp"/>
<size
		android:width="270dp"
		android:height="60dp"/>
<stroke
		android:width="1dp"
		android:color="#878787"/>
    </shape>
  </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chalk.it.up"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/chalkitupicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="chalk.it.up.Activites.MainMenuActivity"
            android:label="@string/app_name" 
            android:noHistory="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="chalk.it.up.Activites.AddPlayerActivity"
            android:label="@string/title_activity_add_player" >
        </activity>
        <activity
            android:name="chalk.it.up.Activites.AddGameActivity"
            android:label="@string/title_activity_add_game" >
        </activity>
        <activity
            android:name="chalk.it.up.Activites.ChoosePlayersActivity"
            android:label="@string/title_activity_choose_players" >
        </activity>
        <activity
            android:name="com.example.softballstattracker.Fragments.PlayerStatsSpinnerFragment"
            android:label="@string/title_activity_players_selected" >
        </activity>
        <activity
            android:name="chalk.it.up.Activites.EditStatsActivity"
            android:label="@string/title_activity_main_fragment" >
        </activity>
        <activity
            android:name="chalk.it.up.Activites.LeaderBoardsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_leader_boards" >
        </activity>
        <activity
            android:name="chalk.it.up.Activites.GameByGameStatActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_game_by_game_stat" >
        </activity>
        <activity
            android:name="chalk.it.up.Activites.AddStatsDialogActivity"
            android:label="@string/title_activity_add_stats_dialog"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
    </application>

</manifest>